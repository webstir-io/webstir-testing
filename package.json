{
  "name": "@webstir-io/webstir-test",
  "version": "0.1.0",
  "description": "Testing runtime and CLI for Webstir TypeScript projects.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js",
      "default": "./dist/runtime.js"
    },
    "./assert": {
      "types": "./dist/assert.d.ts",
      "import": "./dist/assert.js",
      "default": "./dist/assert.js"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "default": "./dist/cli.js"
    },
    "./add-cli": {
      "import": "./dist/add-cli.js",
      "default": "./dist/add-cli.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "webstir-test": "dist/cli.js",
    "webstir-test-runner": "dist/cli.js",
    "webstir-test-add": "dist/add-cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.18.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webstir-io/webstir-testing"
  },
  "keywords": [
    "webstir",
    "test",
    "cli"
  ],
  "author": "Webstir",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.25",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@webstir-io/testing-contract": "^0.1.1",
    "chokidar": "^3.6.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0"
  }
}
