{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "types": ["node"],
    "resolveJsonModule": true,
    "importHelpers": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
